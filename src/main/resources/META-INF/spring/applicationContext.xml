<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd         http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd         http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.1.xsd         http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.1.xsd">

	<context:property-placeholder location="classpath*:META-INF/spring/*.properties" />

	<context:annotation-config />

	<context:component-scan base-package="nc.noumea.mairie" />

	<!-- Datasources -->
	<jee:jndi-lookup id="eaeOracleDataSource" jndi-name="jdbc/SIRH_JOBS_DS3"
		resource-ref="true" />

	<bean id="eaeSessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="eaeOracleDataSource" />
		<property name="annotatedClasses">
			<list>
				<value>nc.noumea.mairie.sirh.eae.domain.EaeCampagne</value>
				<value>nc.noumea.mairie.sirh.eae.domain.EaeCampagneActeur</value>
				<value>nc.noumea.mairie.sirh.eae.domain.EaeCampagneAction</value>
				<value>nc.noumea.mairie.sirh.eae.domain.EaeDocument</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.hbm2ddl.auto">validate</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
			</props>
		</property>
	</bean>

	<jee:jndi-lookup id="sirhDb400DataSource" jndi-name="jdbc/SIRH_JOBS_DS2"
		resource-ref="true" />

	<bean id="sirhSessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="sirhDb400DataSource" />
		<property name="annotatedClasses">
			<list>
				<value>nc.noumea.mairie.sirh.domain.Agent</value>
				<value>nc.noumea.mairie.sirh.domain.DocumentAssocie</value>
				<value>nc.noumea.mairie.sirh.domain.AvctCapPrintJob</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.DB2400Dialect</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.hbm2ddl.auto">validate</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
				<prop key="hibernate.ejb.naming_strategy">org.hibernate.cfg.ImprovedNamingStrategy</prop>
				<prop key="hibernate.connection.charSet">UTF-8</prop>
				<prop key="hibernate.FlushMode">manual</prop>
			</props>
		</property>
	</bean>

	<jee:jndi-lookup id="ptgOracleDataSource" jndi-name="jdbc/SIRH_JOBS_DS4"
		resource-ref="true" />

	<bean id="ptgSessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="ptgOracleDataSource" />
		<property name="annotatedClasses">
			<list>
				<value>nc.noumea.mairie.ptg.domain.VentilTask</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
				<prop key="hibernate.show_sql">false</prop>
				<prop key="hibernate.hbm2ddl.auto">validate</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
			</props>
		</property>
	</bean>

	<!-- Spring ldap -->
	<jee:jndi-lookup id="adUrl" jndi-name="ad/connectionURL"
		resource-ref="true" />
	<jee:jndi-lookup id="adUrl2" jndi-name="ad/connectionURL2"
		resource-ref="true" />
	<jee:jndi-lookup id="adUrl3" jndi-name="ad/connectionURL3"
		resource-ref="true" />
	<jee:jndi-lookup id="adUserBase" jndi-name="ad/userBase"
		resource-ref="true" />
	<jee:jndi-lookup id="adUserPassword" jndi-name="ad/userPassword"
		resource-ref="true" />
	<jee:jndi-lookup id="baseDn" jndi-name="ad/baseDn"
		resource-ref="true" />
	<jee:jndi-lookup id="userOu" jndi-name="ad/userOu"
		resource-ref="true" />
	<bean id="contextSource" class="org.springframework.ldap.core.support.LdapContextSource">
		<property name="urls">
			<list>
				<ref bean="adUrl" />
				<ref bean="adUrl2" />
				<ref bean="adUrl3" />
			</list>
		</property>
		<property name="base" ref="baseDn" />
		<property name="userDn" ref="adUserBase" />
		<property name="password" ref="adUserPassword" />
	</bean>

	<bean id="ldapTemplate" class="org.springframework.ldap.core.LdapTemplate">
		<constructor-arg ref="contextSource" />
	</bean>

	<!-- Spring mail -->
	<jee:jndi-lookup id="mailSession" jndi-name="mail/MailServer"
		resource-ref="true" />
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="session" ref="mailSession" />
	</bean>

	<!-- Velocity Engine -->
	<bean id="velocityEngine"
		class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
		<property name="velocityProperties">
			<value>
				resource.loader=class
				class.resource.loader.class=org.apache.velocity.runtime.resource.loader.ClasspathResourceLoader
				runtime.log.logsystem.class=org.apache.velocity.runtime.log.Log4JLogChute
			</value>
		</property>
	</bean>

	<!-- EaeCampagneActionNotificationsJob parameters -->
	<jee:jndi-lookup id="numberOfTries"
		jndi-name="eaeCampagneActionNotificationsJob.numberOfTentatives"
		expected-type="java.lang.Integer" />
	<jee:jndi-lookup id="baseSirhDocumentsUrl"
		jndi-name="eaeCampagneActionNotificationsJob.baseSirhDocumentsUrl"
		expected-type="java.lang.String" />

	<!-- Reporting service parameters -->
	<jee:jndi-lookup id="reportingBaseUrl" jndi-name="REPORTING_BASE_URL"
		 expected-type="java.lang.String" />
	<jee:jndi-lookup id="reportServerPath" jndi-name="REPORTING_SERVER_SIRH_REPORT_PATH"
		 expected-type="java.lang.String" />
	
	<!-- AvancementsWithEaesMassPrintJob parameters -->
	<jee:jndi-lookup id="avcstTempWorkspacePath" jndi-name="AVCT_JOB_TEMP_DIR"
		 expected-type="java.lang.String" />
	<jee:jndi-lookup id="sirhWsAvctEaesEndpointUrl" jndi-name="AVCT_SIRH_WS_AVCT_EAE_URL"
		 expected-type="java.lang.String" />
	<jee:jndi-lookup id="cupsServerHostName" jndi-name="AVCT_CUPS_SERVER_HOSTNAME"
		 expected-type="java.lang.String" />
	<jee:jndi-lookup id="cupsServerPort" jndi-name="AVCT_CUPS_SERVER_PORT"
		 expected-type="java.lang.Integer" />
	<jee:jndi-lookup id="cupsSirhPrinterName" jndi-name="AVCT_CUPS_SIRH_PRINTER_NAME"
		 expected-type="java.lang.String" />
	<!-- URL for EAE documents hosted on Sharepoint -->
	<jee:jndi-lookup id="sharepointEaeDocBaseUrl" jndi-name="AVCT_URL_SHAREPOINT_GED"
		 expected-type="java.lang.String" />
	<jee:jndi-lookup id="gedWebdavUser" jndi-name="AVCT_GED_WEBDAV_USER"
		 expected-type="java.lang.String" />
	<jee:jndi-lookup id="gedWebdavPwd" jndi-name="AVCT_GED_WEBDAV_PWD"
		 expected-type="java.lang.String" />
	
	<!-- EraseAvancementsWithEaesMassPrintDocumentsJob parameters -->
	<jee:jndi-lookup id="sirhAvctPastThresholdMilliseconds" jndi-name="AVCT_SIRH_PAST_DOCS_THRESHOLD_MS"
		 expected-type="java.lang.Long" />
	
	<!-- Reporting service parameters -->
	<jee:jndi-lookup id="SIRH_PTG_WS_VentilationTaskUrl" jndi-name="SIRH_PTG_WS_VENTILATION_TASK_URL"
		 expected-type="java.lang.String" />
<!-- 	<jee:jndi-lookup id="SIRH_PTG_WS_VentilationDoneUrl" jndi-name="SIRH_PTG_WS_VENTILATION_DONE_URL" -->
<!-- 		 expected-type="java.lang.String" /> -->
	
	<!-- Quartz Jobs Scheduler -->
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="jobFactory">
			<bean class="nc.noumea.mairie.sirh.job.SirhSpringJobFactory" />
		</property>
		<property name="configLocation" value="classpath:quartz.properties" />
		<property name="applicationContextSchedulerContextKey" value="applicationContext" />
	</bean>

</beans>
