<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd         http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd         http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.1.xsd         http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.1.xsd">
	
	<context:property-placeholder location="classpath*:META-INF/spring/*.properties" />
	
	<context:annotation-config/>
	
	<context:component-scan base-package="nc.noumea.mairie" />

	<!-- Datasources -->
	<jee:jndi-lookup id="eaeOracleDataSource" jndi-name="jdbc/EAE_WS_DS1" resource-ref="true" />

	<bean
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean"
		id="eaeEntityManagerFactory">
		<property name="persistenceUnitName" value="eaePersistenceUnit" />
		<property name="dataSource" ref="eaeOracleDataSource" />
	</bean>
	<bean class="org.springframework.orm.jpa.JpaTransactionManager"
		id="eaeTransactionManager">
		<property name="entityManagerFactory" ref="eaeEntityManagerFactory" />
		<property name="jpaDialect" ref="jpaDialect"></property>
	</bean>
	<bean id="jpaDialect" class="org.springframework.orm.jpa.vendor.HibernateJpaDialect" />
	<tx:annotation-driven mode="aspectj" transaction-manager="eaeTransactionManager" />
	
	<jee:jndi-lookup id="sirhDb400DataSource" jndi-name="jdbc/EAE_WS_DS2" resource-ref="true" />
	<bean
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean"
		id="sirhEntityManagerFactory">
		<property name="persistenceUnitName" value="sirhPersistenceUnit" />
		<property name="dataSource" ref="sirhDb400DataSource" />
	</bean>
	<bean class="org.springframework.orm.jpa.JpaTransactionManager"
		id="sirhTransactionManager">
		<property name="entityManagerFactory" ref="sirhEntityManagerFactory" />
	</bean>
	
	<!-- Spring ldap -->
	<jee:jndi-lookup id="adUrl" jndi-name="ad/connectionURL" resource-ref="true" />
	<jee:jndi-lookup id="adUserBase" jndi-name="ad/userBase" resource-ref="true" />
	<jee:jndi-lookup id="adUserPassword" jndi-name="ad/userPassword" resource-ref="true" />
	<bean id="contextSource" class="org.springframework.ldap.core.support.LdapContextSource">
		<property name="url" ref="adUrl" />
        <property name="base" value="dc=site-mairie,dc=noumea,dc=nc" />
        <property name="userDn" ref="adUserBase" />
        <property name="password" ref="adUserPassword" />
    </bean>
      
	<bean id="ldapTemplate"
		class="org.springframework.ldap.core.LdapTemplate">
		<constructor-arg ref="contextSource" />
	</bean>
	
	<!-- Spring mail -->
	<jee:jndi-lookup id="mailSession" jndi-name="mail/MailServer" resource-ref="true" />
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="session" ref="mailSession" />
	</bean>

	<!-- Velocity Engine -->
	<bean id="velocityEngine"
		class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
		<property name="velocityProperties">
			<value>
				resource.loader=class
				class.resource.loader.class=org.apache.velocity.runtime.resource.loader.ClasspathResourceLoader
			</value>
		</property>
	</bean>
	
	<!-- Job properties -->
	<jee:jndi-lookup id="numberOfTries" jndi-name="eaeCampagneActionNotificationsJob.numberOfTentatives" expected-type="java.lang.Integer"/>
	<jee:jndi-lookup id="baseSirhDocumentsUrl" jndi-name="eaeCampagneActionNotificationsJob.baseSirhDocumentsUrl" expected-type="java.lang.String"/>
	
